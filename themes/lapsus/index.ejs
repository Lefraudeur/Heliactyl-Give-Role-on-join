<head>
    <title><%= settings.name %></title>
    <link rel="icon" type="image/png" href="<%= settings.icon %>">
    <link rel="stylesheet" href="../assets/tailwind.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://unpkg.com/@popperjs/core@2.10.1/dist/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Inter font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    /* The Modal (background) */
    .modal {
        display: none;
        /* Hidden by default */
        position: fixed;
        /* Stay in place */
        z-index: 1;
        /* Sit on top */
        padding-top: 100px;
        /* Location of the box */
        left: 0;
        top: 0;
        width: 100%;
        /* Full width */
        height: 100%;
        /* Full height */
        overflow: auto;
        /* Enable scroll if needed */
        background-color: rgb(0, 0, 0);
        /* Fallback color */
        background-color: rgba(0, 0, 0, 0.4);
        /* Black w/ opacity */
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 40px;
        width: 30%;
        border-radius: 16px;
        margin-top: 12%
    }

    .close:hover,
    .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }
</style>
<style>
    .tooltip {
        background-color: #0f172a;
        color: #fff;
        padding: 5px;
        border-radius: 5px;
        font-size: 12px;
        opacity: 0;
        transition: opacity 0.3s;
        z-index: 1;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .tooltip.show {
        opacity: 0.75;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .tooltip-arrow {
        width: 0;
        height: 0;
        border-style: solid;
        position: absolute;
        margin: 5px;
    }

    .tooltip-arrow[data-popper-placement^='top'] {
        border-width: 5px 5px 0 5px;
        border-color: #555 transparent transparent transparent;
        bottom: -5px;
        left: 50%;
        margin-left: -5px;
    }
</style>

<body class="bg-gray-50 h-full" style="font-family: 'Inter'">
    <div class="min-h-full flex">
        <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
            <div class="mx-auto w-full max-w-sm lg:w-96">
                <div>
                    <img class="h-12 w-auto"
                        src="<%= settings.icon %>"
                        alt="Logo">
                    <h2 class="mt-6 text-3xl font-extrabold text-gray-900">Login to your account</h2>
                    <p class="mt-2 text-sm text-gray-600">
                        Select a social media account to login with.
                    </p>
                </div>

                <div class="mt-8">
                    <div>
                        <div>

                            <div class="mt-1 grid grid-cols-2 gap-3">
                                <div>
                                    <a id="myBtn"
                                        class="cursor-pointer w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <span class="sr-only">Sign in with Discord</span>
                                        <svg class="w-5 h-5 mr-3" xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 127.14 96.36">
                                            <g id="" data-name="">
                                                <g id="Discord_Logos" data-name="Discord Logos">
                                                    <g id="Discord_Logo_-_Large_-_White"
                                                        data-name="Discord Logo - Large - White">
                                                        <path
                                                            d="M107.7,8.07A105.15,105.15,0,0,0,81.47,0a72.06,72.06,0,0,0-3.36,6.83A97.68,97.68,0,0,0,49,6.83,72.37,72.37,0,0,0,45.64,0,105.89,105.89,0,0,0,19.39,8.09C2.79,32.65-1.71,56.6.54,80.21h0A105.73,105.73,0,0,0,32.71,96.36,77.7,77.7,0,0,0,39.6,85.25a68.42,68.42,0,0,1-10.85-5.18c.91-.66,1.8-1.34,2.66-2a75.57,75.57,0,0,0,64.32,0c.87.71,1.76,1.39,2.66,2a68.68,68.68,0,0,1-10.87,5.19,77,77,0,0,0,6.89,11.1A105.25,105.25,0,0,0,126.6,80.22h0C129.24,52.84,122.09,29.11,107.7,8.07ZM42.45,65.69C36.18,65.69,31,60,31,53s5-12.74,11.43-12.74S54,46,53.89,53,48.84,65.69,42.45,65.69Zm42.24,0C78.41,65.69,73.25,60,73.25,53s5-12.74,11.44-12.74S96.23,46,96.12,53,91.08,65.69,84.69,65.69Z" />
                                                    </g>
                                                </g>
                                            </g>
                                        </svg>
                                        Discord
                                    </a>
                                </div>

                                <!-- The Modal -->
                                <div id="myModal" class="modal">

                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <h2 class="text-gray-900 text-xl font-bold mb-2">One more thing</h2>
                                        <p class="text-gray-600 font-medium">Please confirm that you allow us to:</p>
                                        <ul class="list-disc ml-5 text-gray-500 mb-8">
                                            <li>Automatically join you to our Discord server</li>
                                            <li>Access your email address, username & avatar</li>
                                        </ul>
                                        <div class="mt-1 grid grid-cols-2 gap-3">
                                            <div>
                                                <a href="../login"
                                                    class="cursor-pointer w-full inline-flex justify-center py-2 px-4 rounded-md shadow-sm bg-black-500 text-sm font-medium text-white hover:bg-gray-700 transition">
                                                    Continue
                                                </a>
                                            </div>
            
                                            <div>
                                                <a
                                                    class="close w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 cursor-default">
                                                    Cancel
                                                </a>
                                            </div>
            
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="mt-6">
                        <form action="#" method="POST" class="space-y-6">
                            <div class="tooltip" role="tooltip" id="tooltip">
                                <div class="tooltip-arrow" data-popper-variation="1"></div>
                                <div class="tooltip-inner">
                                    &nbsp; Coming soon. We're working on this. &nbsp;
                                </div>
                            </div>
                        </form>
                    </div>

                    <script>
                        // Get the modal
                        var modal = document.getElementById("myModal");

                        // Get the button that opens the modal
                        var btn = document.getElementById("myBtn");

                        // Get the <span> element that closes the modal
                        var span = document.getElementsByClassName("close")[0];

                        // When the user clicks the button, open the modal 
                        btn.onclick = function () {
                            modal.style.display = "block";
                        }

                        // When the user clicks on <span> (x), close the modal
                        span.onclick = function () {
                            modal.style.display = "none";
                        }

                        // When the user clicks anywhere outside of the modal, close it
                        window.onclick = function (event) {
                            if (event.target == modal) {
                                modal.style.display = "none";
                            }
                        }
                    </script>

                    <script>
                        // Initialize the Popper.js tooltip
                        const tooltip = document.getElementById('tooltip');
                        const button = document.getElementById('comingsoon');
                        const popperInstance = Popper.createPopper(button, tooltip, {
                            placement: 'top',
                            modifiers: [{
                                    name: 'offset',
                                    options: {
                                        offset: [0, 10],
                                    },
                                },
                                {
                                    name: 'arrow',
                                    options: {
                                        element: '.tooltip-arrow',
                                    },
                                },
                            ],
                        });

                        // Show/hide the tooltip when the button is hovered
                        button.addEventListener('mouseenter', function () {
                            tooltip.classList.add('show');
                            popperInstance.update();
                        });

                        button.addEventListener('mouseleave', function () {
                            tooltip.classList.remove('show');
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="hidden lg:block relative w-0 flex-1">
            <img class="absolute inset-0 h-full w-full object-cover"
                src="/assets/img/wallpaper_1.jpg"
                alt="wallpaper_1">
        </div>
    </div>
</body>